<h2>Movies</h2>

{{#each movies}}
<a href="/movies/{{this._id}}">
    <h2>{{this.title}}</h2>
   </a>
<form action="/movies/{{this._id}}/delete" method="POST">
    <input type="submit" value="Delete">
</form>
   

<br>

<a href="/movies/{{this._id}}/edit">Edit</a>

{{/each}}
<br>
<h3><a href="/movies/new">Add a new movie</a></h3>